<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.train.mapper.SysOrgRoleMapper">

    <select id="selectOrgIdsByRoleId" resultType="java.lang.String">
        SELECT org_id FROM sys_org_role WHERE role_id = #{roleId}
    </select>
    <select id="selectRoleIdsByOrgIds" resultType="java.lang.String">
        SELECT role_id FROM sys_org_role WHERE org_id IN
        <foreach item="item" index="index" collection="orgIds" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
    <select id="selectRoleIdsByOrgId" resultType="java.lang.String">
        SELECT role_id FROM sys_org_role WHERE org_id = #{orgId}
    </select>
</mapper>